pipeline {
    agent any

    environment {
        BIKE = "harley"
    }

    stages {
        stage("Env Variables") {
            environment {
                NAME = "Alok"
            }

            steps {
                echo "BIKE = ${env.FOO}"
                echo "NAME = ${env.NAME}"

                script {
                    env.TEST_VARIABLE = "some test value"
                }

                echo "TEST_VARIABLE = ${env.TEST_VARIABLE}"

                withEnv(["ANOTHER_ENV_VAR=here is some value"]) {
                    echo "ANOTHER_ENV_VAR = ${env.ANOTHER_ENV_VAR}"
                }
            }
        }
    }
}
